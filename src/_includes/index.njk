{% extends "simpleIndex.njk" %}

{% block hero %}

<section class="site-hero">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <div class="site-hero-content text-center">
          <h6> {{ heroDescription }} </h6>
          <h1>
            {{ heroTitle1 }}
            <br />
            {{ heroTitle2 }}
          </h1>
          <ul class="site-hero-content-buttons">
            <li>
              <a href="#project" class="btn btn-secondary scroll-to">
                <span class="btn-area">
                  <span data-text="{{ heroButton1Text }}"> {{ heroButton1Text }} </span>
                </span>
              </a>
            </li>
            <li>
              <a href="/contact" class="btn btn-primary">
                <span class="btn-area">
                  <span data-text="{{ heroButton2Text }}"> {{ heroButton2Text }} </span>
                </span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <a href="#counter" class="site-hero-scroll scroll-to">
    <img src="{{ heroArrow }}" alt="arrow-down" />
  </a>
</section>

{% endblock %}

{% block counter %}

<section class="site-counter" id="counter">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2 class="text-white"> {{ counterTitle }} </h2>
        </div>
      </div>
    {% for item in collections.counterPosts %}
      <div class="col-lg-3">
        <div class="site-counter-item">
          <span class="site-counter-item-title"> {{ item.data.counterTitle }} </span>
          <h3 class="site-counter-item-number"> {{ item.data.counterCount }} </h3>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
</section>
    
{% endblock %}

{% block project %}

<section class="site-project" id="project">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2> {{ projectTitle }} </h2>
          <p>
            {{ projectDescription }}
          </p>
        </div>
      </div>

      {% for item in collections.portfolioPosts %}

      <div class="col-lg-6">
        <div class="site-project-item">
          <div class="site-project-item-thumb">
            <img
              src="{{ item.data.backgroundImage }}"
              alt="{{ item.data.title }}"
            />
          </div>
          <div class="site-project-item-content">
            <span>{{ item.data.productType }}</span>
            <h3>{{ item.data.title }}</h3>
            <a href=" {{ item.url }} ">view project</a>
          </div>
        </div>
      </div>

      {% endfor %}
      <div class="col-12">
        <a href="/portfolio" class="site-project-cta"> {{ projectDowntext }} </a>
      </div>
    </div>
  </div>
</section>
    
{% endblock %}

{% block testimonials %}

<section class="site-testimonial">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2> {{ testimonialsTitle }} </h2>
          <p> {{ testimonialsDescription }} </p>
        </div>
      </div>
    {% for item in collections.testimonialsTeam %}
      <div class="col-lg-4">
        <div class="site-testimonial-item">
          <div class="site-testimonial-item-header">
            <div class="thumb">
              <img
                src="{{ item.data.image }}"
                alt="{{ item.data.name }}"
              />
            </div>
            <div class="person">
              <h5> {{ item.data.name }} </h5>
              <p> {{ item.data.dig }} </p>
            </div>
          </div>
          <p class="site-testimonial-item-body">
            {{ item.data.description }}
          </p>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
</section>
    
{% endblock %}